        </exclusions>
      </dependency>

      <dependency>
        <groupId>org.apache.xmlgraphics</groupId>
        <artifactId>fop</artifactId>
        <version>${fop.version}</version>
        <exclusions>
          <exclusion>
            <!-- excluded because of duplicate code causing errors in module -->
            <groupId>org.apache.xmlgraphics</groupId>
