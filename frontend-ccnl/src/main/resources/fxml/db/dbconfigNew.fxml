			<children>
				<HBox>
					<children>
						<Label text="Folder voor de database" />
						<Label style="-fx-text-fill: red;" text=" *" />
					</children>
				</HBox>
				<TextField fx:id="dbFolder" text="S:\ledenadministratie-ccnl\db\ccnl" />
			</children>
		</VBox>
		<VBox>
			<children>
				<HBox>
					<children>
						<Label text="Database naam" />
						<Label style="-fx-text-fill: red;" text=" *" />
					</children>
				</HBox>
				<TextField fx:id="dbName" />
			</children>
		</VBox>
		<Label fx:id="message"/>
