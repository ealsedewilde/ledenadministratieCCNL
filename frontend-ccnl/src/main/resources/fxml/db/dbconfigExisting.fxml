<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import nl.ealse.ccnl.control.button.*?>

<VBox prefHeight="167.0" prefWidth="400.0" spacing="20.0"
	xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox>
			<children>
				<Label text="Database folder" />
				<TextField fx:id="dbFolder" disable="true"/>
				<Label text="Database naam" />
				<TextField fx:id="dbName" disable="true"/>
			</children>
		</VBox>
		<Label fx:id="message"/>
		<SaveButton fx:id="saveButton" mnemonicParsing="false" onAction="#save" />
	</children>
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
	</padding>
</VBox>
